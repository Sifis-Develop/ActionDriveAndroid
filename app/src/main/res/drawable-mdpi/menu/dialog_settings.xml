<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Enable Customer View in OrderList"
            android:layout_weight="0.9"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customerCheckBox"
            android:layout_weight="0.1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Match buses per hotel"
            android:layout_weight="0.9"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matchPerHotelCheckBox"
            android:layout_weight="0.1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="gone">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Set API URL"
            android:textColor="@color/blue"
            android:layout_weight="0.3"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:id="@+id/apiURLEditText"
            android:freezesText="true"
            android:text="http://"
            android:singleLine="true"
            android:layout_weight="0.7" />

    </LinearLayout>

    <Button
        android:id="@+id/updateCheckButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="Check for new version"
        android:visibility="visible"/>

</LinearLayout>
